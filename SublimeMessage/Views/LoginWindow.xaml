<Window x:Class="SublimeMessage.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="220" Width="300">
    <Grid Background="#FFE6E6E6">
        <Grid Background="#FFE5E5E5" Margin="0,20,0,20">
            <Grid Width="180" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBox Style="{StaticResource placeHolder}" x:Name="usernameBox" Height="32" Margin="0,10" Padding="5,7,0,0" Tag="用户名/SM号/邮箱" />
                    <TextBox Style="{StaticResource placeHolder}" x:Name="passwordBox" Height="32" Margin="0,10" Padding="5,7,0,0" Tag="密码" />
                </StackPanel>
            </Grid>
            <Grid Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="signInButton" Width="64" Margin="10,0" Content="登录" Click="signInButton_Click" />
                    <Button x:Name="signUpButton" Width="64" Margin="10,0" Content="注册" Click="signUpButton_Click" />
                    <Button x:Name="ptopButton" Width="64" Margin="10,0" Content="内网模式" Click="ptopButton_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
