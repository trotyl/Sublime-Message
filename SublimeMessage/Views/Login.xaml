<Window x:Class="SublimeMessage.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="246" Width="300">
    <Grid Background="#FFE6E6E6">
        
        <TabControl>
            <TabItem Header="我是客户端">
                <Grid Background="#FFE5E5E5">
                    <TextBox Width="200" Height="32" VerticalAlignment="Top" Margin="0,30,0,0" Text="SM号/邮箱" Padding="0,7,0,0" Tag="SM号/邮箱" GotFocus="TextBox_CheckPlaceHolder" LostFocus="TextBox_CheckPlaceHolder" HorizontalAlignment="Center"/>
                    <TextBox Width="200" Height="32" VerticalAlignment="Top" Margin="0,80,0,0" Text="密码" Padding="0,7,0,0" Tag="密码" GotFocus="TextBox_CheckPlaceHolder" LostFocus="TextBox_CheckPlaceHolder" HorizontalAlignment="Center" />
                    <Grid Margin="0,130,0,0" >
                        <Button Width="64" Height="24" HorizontalAlignment="Left" Margin="32,0,0,0" Content="登录" />
                        <Button Width="64" Height="24" HorizontalAlignment="Left" Margin="114,0,0,0" Content="注册" />
                        <Button Width="64" Height="24" HorizontalAlignment="Left" Margin="196,0,0,0" Content="内网模式" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="我是服务器">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
